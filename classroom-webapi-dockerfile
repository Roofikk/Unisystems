# See https://aka.ms/customizecontainer to learn how to customize your debug container
# and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY "Unisystems.ClassroomAccount.WebApi/Unisystems.ClassroomAccount.WebApi.csproj" "Unisystems.ClassroomAccount.WebApi/"
COPY "Unisystems.ClassroomAccount.DataContext/Unisystems.ClassroomAccount.DataContext.csproj" "Unisystems.ClassroomAccount.WebApi/"
COPY "Unisystems.BuildingMessageContracts/Unisystems.BuildingMessageContracts.csproj" "Unisystems.BuildingMessageContracts/"
RUN dotnet restore "Unisystems.ClassroomAccount.WebApi/Unisystems.ClassroomAccount.WebApi.csproj"

COPY . .
WORKDIR "/src/Unisystems.ClassroomAccount.WebApi"
RUN dotnet build -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Unisystem.ClassroomAccount.WebApi.dll"]